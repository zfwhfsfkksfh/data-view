{
    "singleQuote": true,
    "trailingComma": "all",
    "tabWidth": 4,
    "printWidth": 180,
    "overrides": [
        {
            "files": ".prettierrc",
            "options": {
                "parser": "json"
            }
        },
        {
            "files": "package.json",
            "options": {
                "parser": "json",
                "tabWidth": 2
            }
        },
        {
            "files": "*.vue",
            "options": {
                "parser": "vue"
            }
        }
    ]
}
